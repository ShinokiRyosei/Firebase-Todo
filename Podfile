# Uncomment this line to define a global platform for your project
platform :ios, '8.0'

target 'Firebase-Todo' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Firebase-Todo
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'

  target 'Firebase-TodoTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Firebase-TodoUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
